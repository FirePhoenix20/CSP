budget = int(input("Current budget: "))
amtExpense = int(input("Amount of expenses: "))

for i in range(amtExpense):
    Expense = int(input("Type expense amount: "))
    if Expense <= budget:
        budget -= Expense
        print("Amount left will be", budget)
        print("Total amount of expenses:", amtExpense)
        print("Total amount of money spent:", budget - Expense)
    else:
        print("â— Expense exceeds budget. Not affordable.")
        break
        print("Total amount of expenses:", amtExpense)
